/* pages/order/index.wxss */
/* 购物车结算 */

.layout-address {
  background-color: #ef2612;
}

.view-address {
  margin: 0 20rpx;
  padding: 20rpx 20rpx 0rpx;
  background-color: white;
  border-bottom: 1px solid white;
}

.view-divide {
  border-top: 1px solid #f0f0f0;
}

.text-field {
  color: #999;
  font-size: 30rpx;
}

.view-field {
  display: block;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  align-items: center;
  font-size: 32rpx;
}

.view-field.xydivide {
  padding-top: 28rpx;
  padding-bottom: 38rpx;
}

.view-card {
  margin: 0 20rpx 20rpx;
  padding: 0 20rpx;
  background-color: white;
  box-shadow: 0px 2px 5px 0 rgba(100, 100, 100, 0.2);
}

.offset-top {
  margin-top: -1px !important;
  border-top: 1px solid white;
  z-index: 2;
  box-shadow: 0 -1px 0 #fff, 0px 2px 5px 0 rgba(100, 100, 100, 0.2);
}

.layout-doing .view-card {
  margin: 10rpx 20rpx;
  position: relative;
}

.view-dish {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  padding-top: 20rpx;
  padding-bottom: 25rpx;
}

.view-dish image {
  width: 120rpx;
  height: 120rpx;
}

.view-dish .dish-content {
  width: 100%;
  display: table-cell;
  margin-left: 20rpx;
}

.view-dish .dish-content .dish-name {
  display: block;
  font-size: 30rpx;
}

.view-dish .dish-content .dish-restaurant {
  color: #999;
  display: block;
  font-size: 25rpx;
  margin-top: 5rpx;
}

.view-dish .dish-price {
  display: block;
  width: 100%;
  margin-top: 15rpx;
}

.dish-count {
  float: right;
  margin-right: 10rpx;
}

.dish-count .count {
  min-width: 38rpx;
  display: table-cell;
  padding: 0 5rpx;
  text-align: center;
  vertical-align: middle;
}

.view-dish .dish-count image {
  width: 45rpx;
  height: 45rpx;
  text-align: center;
  color: white;
  display: table-cell;
}

.pay-type {
  padding-right: 20rpx;
  color: #aaa;
  font-size: 30rpx;
}

.dish-remarks {
  max-width: 60vw;
  padding-left: 20rpx;
  padding-right: 20rpx;
  color: #aaa;
  font-size: 30rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.btn-order {
  margin: 30rpx 20rpx;
  color: white;
  border-radius: 4px;
  background-color: #ef2612;
  box-shadow: 0px 1px 5px rgba(239, 38, 18, 0.5);
}

.btn-hover {
  background-color: #c01708;
  box-shadow: none;
}

.view-field-text {
  display: inline-block;
  vertical-align: top;
}

/* 进行中的订单 */

.layout-doing {
  padding-top: 10rpx;
}

.doing-title {
  margin: 0 20rpx 15rpx;
  text-align: center;
  background-image: url(data:image/png;base64,);
  background-repeat: repeat-x;
  background-position: center;
}

.doing-title text {
  height: 50rpx;
  line-height: 50rpx;
  color: #ababab;
  font-size: 30rpx;
  padding: 0 10rpx;
  background-color: #f0f0f0;
}

.doing-order-title {
  width: 100%;
  display: block;
  text-align: center;
  padding: 35rpx 0 10rpx;
  font-size: 40rpx;
  font-weight: bold;
}

.doing-order-title text {
  color: #f0bd49;
  position: absolute;
  right: 10rpx;
  font-size: 28rpx;
}

.doing-process {
  display: flex;
  align-items: center;
  padding: 10rpx 30rpx;
  font-size: 32rpx;
}

.doing-process view {
  flex: 1;
  text-align: center;
}

.doing-process view text {
  display: inline-block;
  width: 80rpx;
  text-align: center;
}

.doing-process view text:last-child {
  font-size: 30rpx;
  /* display: block; */
}

.doing-process view.active {
  color: #f0bd49;
}

.doing-process .border {
  border-top: 1px dotted #666;
  margin-right: 20rpx;
}

.doing-process .border.active {
  border-top: 1px dotted #f0bd49;
}

.doing-order-btn {
  padding: 30rpx;
  text-align: center;
}

.doing-order-btn navigator {
  display: inline;
}

.doing-order-btn button {
  height: 70rpx;
  font-size: 30rpx;
  line-height: 70rpx;
  padding: 0rpx 70rpx;
  display: inline-block;
}

.doing-order-btn  button {
  background-color: white;
  border: 1px solid #ef2612;
}

.doing-order-btn .btn-comment {
  color: white;
  margin-left: 20rpx;
	padding: 0rpx 100rpx;
  background-color: #ef2612;
}

.address-info {
  font-size: 35rpx;
  font-weight: bold;
}

.address-info + view {
  font-size: 28rpx;
  color: #aaa;
}

.doing-process-time {
  font-size: 28rpx;
  text-align: center;
  padding-top: 10rpx;
}

.view-coupon {
  background-color: #f0f0f0;
  padding: 10rpx 20rpx;
  display: flex;
  justify-content: space-between;
}

/*订座  */

.layout-restaurant .doing-order-title {
  border-bottom: 0px solid;
}

.reservation-btn {
  text-align: center;
  padding: 30rpx 0;
}

.reservation-btn button {
  height: 70rpx;
  line-height: 70rpx;
  padding: 0rpx 70rpx;
  background: #fff;
  border-radius: 5px;
  border: 1px solid #ef2612;
  display: inline-block;
  margin: 0 10rpx;
}

.layout-restaurant .right {
  position: absolute;
  right: 20rpx;
  font-size: 28rpx;
  color: #ef2612;
}

.common-shopcart {
	width: 50rpx;
	height: 50rpx;
	position: fixed;
	bottom: 40rpx;
	right: 20rpx;
	padding: 20rpx;
	background-color: white;
	border-radius: 30px;
	box-shadow: 1px 1px 3px rgba(10, 10, 10, .3)
}

.common-shopcart image {
	width: 100%;
	height: 100%;
}

.common-shopcart::before {
	right: 18rpx;
	top: 20rpx;
	content: " ";
	position: absolute;
	width: 15rpx;
	height: 15rpx;
	border-radius: 30px;
	background-color: #ef2612;
}
