/* pages/order/index.wxss */
/* 购物车结算 */
page{
  background-color: #f8f8f8;
}
.layout-address {
  background-color: #ef2612;
}

.view-address {
  margin: 0 20rpx;
  padding: 20rpx 20rpx 0rpx;
  background-color: white;
  border-bottom: 1px solid white;
}

.view-divide {
  border-bottom: 1px solid #f0f0f0;
}

.text-field {
  color: #999;
  font-size: 30rpx;
}

.view-field {
  display: block;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  align-items: center;
  font-size: 32rpx;
}

.view-field.xydivide {
  padding-top: 28rpx;
  padding-bottom: 38rpx;
}

.view-card {
  margin: 0 20rpx 20rpx;
  padding: 0 20rpx;
  background-color: white;
  box-shadow: 0px 2px 5px 0 rgba(100, 100, 100, 0.2);
}

.offset-top {
  margin-top: -1px !important;
  border-top: 1px solid white;
  z-index: 2;
  box-shadow: 0 -1px 0 #fff, 0px 2px 5px 0 rgba(100, 100, 100, 0.2);
}

.layout-doing .view-card {
  margin: 10rpx 30rpx;
  position: relative;
  border-radius: 15rpx;
}

.view-dish {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  padding-top: 20rpx;
  padding-bottom: 25rpx;
}

.view-dish image {
  width: 120rpx;
  height: 120rpx;
}

.view-dish .dish-content {
  width: 100%;
  display: table-cell;
  margin-left: 20rpx;
}

.view-dish .dish-content .dish-name {
  display: block;
  font-size: 30rpx;
}

.view-dish .dish-content .dish-restaurant {
  color: #999;
  display: block;
  font-size: 25rpx;
  margin-top: 5rpx;
}

.view-dish .dish-price {
  display: block;
  width: 100%;
  margin-top: 15rpx;
}

.dish-count {
  float: right;
  margin-right: 10rpx;
}

.dish-count .count {
  min-width: 38rpx;
  display: table-cell;
  padding: 0 5rpx;
  text-align: center;
  vertical-align: middle;
}

.view-dish .dish-count image {
  width: 45rpx;
  height: 45rpx;
  text-align: center;
  color: white;
  display: table-cell;
}

.pay-type {
  padding-right: 20rpx;
  color: #aaa;
  font-size: 30rpx;
}
.times{
  color: #333;
}
.payBox{
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  align-items: center;
  flex-direction:row-reverse;
}

.payBtn{
  height: 52rpx;
  line-height: 52rpx;
}